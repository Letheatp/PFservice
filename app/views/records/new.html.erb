<%=link_to records_path, style: "color: inherit; text-decoration: none;" do%>
  <div class="container py-4">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">合計金額</h5>
        <h3 class="card-text"><%=sum_amount(current_user)%></h3>
      </div>
    </div>
  </div>
<% end %>

<div class="container">
  <%= form_with(model: @record_form, url: records_path, method: :post) do |form| %>
    <div class="form-group">
      <%= form.label :game_id %>
      <%= form.number_field :game_id, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :amount %>
      <%= form.number_field :amount, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :comment %>
      <%= form.text_area :comment, class: "form-control" %>
    </div>

    <%= form.submit t('defaults.send'), class: "btn btn-primary" %>

  <% end %>

</div>